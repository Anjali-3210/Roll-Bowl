<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Roll Bowl</title>
  <link rel="stylesheet" href="/style.css" />
</head>

<body>
  <div class="container">

    <!-- Logo -->
    <img src="/rollbowllogo.png" alt="Roll Bowl Logo" class="logo" />

    <!-- Greeting -->
    <h1 class="greeting">Hello <%= name %></h1>


    <!-- Menu + Voting -->
    <% if (todayMenu) { %>

      <h2>
        Voting for Tomorrow
      </h2>

      <p style="font-size:13px;color:#666;">
        Please confirm your meal before the cutoff time.
      </p>

      <form method="POST" action="/vote-ui">
        <input type="hidden" name="token" value="<%= token %>" />

        <% todayMenu.items.split(',').forEach(function(item) { %>
          <div style="margin-bottom:8px;">
            <input
              type="checkbox"
              name="choice"
              value="<%= item.trim() %>"
              id="<%= item.trim() %>"
            />
            <label for="<%= item.trim() %>">
              <%= item.trim() %>
            </label>
          </div>
        <% }); %>

        <br />

        <button class="btn-success" type="submit" name="willEat" value="true">
          I will eat tomorrowðŸ˜ƒ
        </button>
         
<!-- Divider -->
    <hr />

        <button class="btn-accent" type="submit" name="willEat" value="false">
          I will skip tomorrowðŸ˜“
        </button>
      </form>

    <% } else { %>

      <p>No menu available at the moment.</p>

    <% } %>

    <!-- Divider -->
    <hr />

<!-- Subscription Info -->
   <% if (subscription) { %>
  <div class="card">
    <p><strong>Plan:</strong> <%= subscription.planType %></p>

    <p>
      <strong>Subscription:</strong><br>
      <%= new Date(subscription.startDate).toDateString() %>
      â†’
      <%= new Date(subscription.endDate).toDateString() %>
    </p>

    <p>
      <strong>Meals Used:</strong>
      <%= subscription.mealsConsumed %> /
      <%= subscription.totalMeals %>
    </p>

    <p>
      <strong>Meals Remaining:</strong>
      <%= subscription.totalMeals - subscription.mealsConsumed %>
    </p>
  </div>
<% } else { %>
  <div class="card" style="color:red;">
    No active subscription
  </div>
<% } %>



  </div>
</body>
</html>





















