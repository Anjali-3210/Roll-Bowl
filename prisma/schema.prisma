enum PlanType {
  BASIC
  PREMIUM
}


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  name          String
  phone     String
  token         String?       @unique
  subscription  Subscription?
  votes         Vote[]
}

model Subscription {
  id        Int      @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  totalMeals     Int      @default(20)
  mealsConsumed  Int      @default(0)
  planType       String
  createdAt      DateTime @default(now()) 
}

model Menu {
  id    Int      @id @default(autoincrement())
  date  DateTime @unique
  items String
  createdAt DateTime @default(now())
}


model Vote {
  id        Int      @id @default(autoincrement())
  date      DateTime
  willEat   Boolean
  choice    String?      // ðŸ‘ˆ NEW: what item they chose
  userId    Int

  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}

model Holiday {
  id        Int      @id @default(autoincrement())
  date      DateTime @unique
  reason    String?
  createdAt DateTime @default(now())
}





