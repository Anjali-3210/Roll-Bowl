<!DOCTYPE html>
<html>
<head>
  <title>Roll Bowl</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">

    <img src="/rollbowllogo.png" alt="Roll Bowl Logo" class="logo" />

    <h1>Hello <%= name %></h1>

    <% if (subscription) { %>
      <div class="card">
        <p>
          <strong>Subscription Start:</strong>
          <%= new Date(subscription.startDate).toDateString() %>
        </p>

        <p>
          <strong>Valid Till:</strong>
          <%= new Date(subscription.endDate).toDateString() %>
        </p>

        <p><strong>Meal Limit:</strong> 20 meals</p>
      </div>
    <% } else { %>
      <p style="color:red;">No active subscription</p>
    <% } %>

    <hr />

    <% if (todayMenu) { %>
      <h2>Today's Menu</h2>

      <form method="POST" action="/vote-ui">
        <input type="hidden" name="token" value="<%= token %>" />

        <% todayMenu.items.split(',').forEach(function(item) { %>
          <div>
            <input type="checkbox" name="choice" value="<%= item.trim() %>">
            <label><%= item.trim() %></label>
          </div>
        <% }); %>

        <br />

        <button type="submit" name="willEat" value="true">
          I will eat tomorrow
        </button>

        <button type="submit" name="willEat" value="false">
          I will skip tomorrow
        </button>
      </form>
    <% } else { %>
      <p>No menu available for today.</p>
    <% } %>

  </div>
</body>
</html>










