<!DOCTYPE html>
<html>
  <head>
    <title>Roll Bowl</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <div class="container">
    <img src="/rollbowllogo.png" alt="Roll Bowl Logo" class="logo" />
    <h1>Hello <%= name %></h1>
    <div style="margin-bottom: 20px;">
  <% if (remainingDays > 0) { %>
    <p>
      <strong>Subscription active</strong><br />
      Days remaining: <%= remainingDays %>
    </p>
  <% } else { %>
    <p style="color: red;">
      <strong>Subscription expired</strong>
    </p>
  <% } %>
</div>


    <% if (todayMenu) { %>
      <h2>Today's Menu</h2>
      <form method="POST" action="/vote-ui">
        <input type="hidden" name="token" value="<%= token %>" />

        <% todayMenu.items.split(',').forEach(item => { %>
          <div>
            <input type="radio" name="choice" value="<%= item.trim() %>" required />
            <label><%= item.trim() %></label>
          </div>
        <% }) %>

        <br />

        <button type="submit" name="willEat" value="true">
          I will eat tomorrow
        </button>

        <button type="submit" name="willEat" value="false">
          I will skip tomorrow
        </button>
      </form>
    <% } else { %>
      <p>No menu available for today.</p>
    <% } %>
</div>
  </body>
</html>



