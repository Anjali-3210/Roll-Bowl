<!DOCTYPE html>
<html>
  <head>
    <title>Roll Bowl</title>
  </head>
  <body>
    <h1>Hello <%= name %></h1>

    <% if (todayMenu) { %>
      <h2>Today's Menu</h2>
      <form method="POST" action="/vote-ui">
        <input type="hidden" name="token" value="<%= token %>" />

        <% todayMenu.items.split(',').forEach(item => { %>
          <div>
            <input type="radio" name="choice" value="<%= item.trim() %>" required />
            <label><%= item.trim() %></label>
          </div>
        <% }) %>

        <br />

        <button type="submit" name="willEat" value="true">
          I will eat tomorrow
        </button>

        <button type="submit" name="willEat" value="false">
          I will skip tomorrow
        </button>
      </form>
    <% } else { %>
      <p>No menu available for today.</p>
    <% } %>
  </body>
</html>
